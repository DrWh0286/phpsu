<?xml version="1.0" encoding="UTF-8"?>
<phpsu xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="http://schema.phpsu.de/1.0/phpsu.xsd">
  <config>
    <filesystem type="directory" name="fileadmin">
      <option name="directory" value="fileadmin/"/>
    </filesystem>
  </config>
  <hosts>
    <host name="Production">
      <console type="ssh">
        <option name="host" value="example.com"/>
        <option name="user" value="example"/>
        <option name="port" value="22"/>
        <option name="rootDir" value="/srv/www/example/www.example.com"/>
      </console>
    </host>
    <host name="Testing">
      <console type="ssh">
        <option name="host" value="example.com"/>
        <option name="user" value="example"/>
        <option name="port" value="22"/>
        <option name="rootDir" value="/srv/www/example/test.example.com"/>
      </console>
    </host>

    <host name="vogel">
      <console type="ssh">
        <option name="host" value="10.50.1.223"/>
        <option name="user" value="user"/>
        <option name="rootDir" value="/var/www/project_example"/>
      </console>
      <filesystem type="directory" name="fileadmin">
        <option name="directory" value="public/fileadmin/"/>
      </filesystem>
    </host>
  </hosts>
</phpsu>
